<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_loginbg">

    <EditText
        android:id="@+id/userLoginInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/editshape"
        android:hint="@string/uername"
        android:textColor="#030303"
        android:textSize="20dp"
        android:text="15695203200@163.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:text="aaaaa"
        android:background="@drawable/editshape"
        app:layout_constraintTop_toBottomOf="@id/userLoginInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:textColor="#030303"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/userRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/userPassword"
        app:layout_constraintLeft_toLeftOf="@id/userPassword" />

    <TextView
        android:id="@+id/userLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/userPassword"
        app:layout_constraintRight_toRightOf="@id/userPassword"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/findPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userLogin"
        app:layout_constraintRight_toRightOf="@id/userLogin"
        android:layout_marginTop="35dp"
        android:text="@string/forgetpwd"
        android:textColor="@color/textColor"
        android:textSize="24sp" />
</androidx.constraintlayout.widget.ConstraintLayout>